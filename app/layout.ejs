<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>
    <%- title %>
  </title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" />
  <link rel="stylesheet" href="./assets/style/all.css">
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light p-3 mb-5">
    <div class="container-fluid">
      <a class="navbar-brand" href="index.html">LOGO</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
          <li class="nav-item me-4">
            <a class="nav-link active" aria-current="page" href="signin.html" id="signinBT">登入</a>
          </li>
          <li class="nav-item me-4">
            <a class="btn btn-primary" href="signup.html" id="signupBT">免費註冊</a>
          </li>
          <li class="nav-item me-4" id="backstageLi">

          </li>
          <li class="nav-item me-4">
            <a class="nav-link  d-none" href="mycollect.html" id="collectBT">收藏列表</a>
          </li>
          <li class="nav-item me-4">
            <a class="nav-link  d-none" href="#" id="menuBT">Hello!</a>
          </li>
          <li class="nav-item">
            <a class="nav-link  d-none" href="#" id="signoutBT" onclick="signout()">登出</a>
          </li>

        </ul>
      </div>
    </div>
  </nav>

  <%- contents %>


    <script src="./assets/js/vendors.js"></script>
    <script src="./assets/js/all.js"></script>
    <script>
      layoutInit()
      function layoutInit() {
        const userId = localStorage.getItem('userId');
        const permissions = localStorage.getItem('permissions');
        const userName = localStorage.getItem('userName')

        const signinBT = document.getElementById('signinBT');
        const signupBT = document.getElementById('signupBT');
        const collectBT = document.getElementById('collectBT');
        const menuBT = document.getElementById('menuBT');
        const signoutBT = document.getElementById('signoutBT');

        if(permissions != null){
          signinBT.classList.add('d-none');
          signupBT.classList.add('d-none');
          collectBT.classList.remove('d-none');
          menuBT.classList.remove('d-none');
          signoutBT.classList.remove('d-none');
          menuBT.textContent = 'Hello '+userName;
        } 

        if(permissions == 'admin'){
          const backstageLi = document.getElementById('backstageLi');
          backstageLi.innerHTML = `<a class="nav-link" href="backstage.html">後台管理</a>`
        }

      }

      function signout(){
        localStorage.removeItem('userId');
        localStorage.removeItem('permissions');
        localStorage.removeItem('userName');
        location.href = 'index.html'
      }


    </script>
</body>

</html>